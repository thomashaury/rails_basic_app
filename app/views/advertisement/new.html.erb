
<h1>New Advertisement</h1>

 <div class="row">
     <%= form_for @advertisement do |ad| %>
       <div class="form-group">
         <%= ad.label :title %>
         <%= ad.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
       </div>
       <div class="form-group">
         <%= ad.label :copy %>
         <%= ad.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter ad body" %>
       </div>
       <div class="form-group">
         <%= ad.label :price %>
         <%= ad.number_field :price, class: 'form-control', placeholder: 100 %>
       </div>
       <div class="form-group">
         <%= ad.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
